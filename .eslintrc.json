{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["react-app", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react", "prettier"
    ],
    "rules": {
        "prettier/prettier": [
          "error",
          {
            "printWidth": 75,
            "trailingComma": "es5",
            "semi": false,
            "jsxSingleQuote": true,
            "singleQuote": true,
            "useTabs": true,
            "endOfLine":"auto"
          }
        ]
      }
}
